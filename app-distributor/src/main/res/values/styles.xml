<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Tipall" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorPrimaryDark</item>
        <item name="tabStyle">@style/Widget.App.TabLayout</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textDiAwan</item>
        <item name="checkedChip">@style/Widget.MaterialComponents.Chip.Choice</item>
        <item name="textAppearanceButton">@style/TextAppearance.AppCompat.Body1</item>
        <item name="buttonStyle">@style/Widget.App.Button.OutlinedButton.IconOnly</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="circularProgressIndicatorStyle">@style/Widget.App.CircularProgressIndicator</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="Widget.App.CircularProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CircularProgressIndicator</item>
        <item name="trackThickness">4dp</item>
        <item name="showAnimationBehavior">inward</item>
        <item name="hideAnimationBehavior">outward</item>
        <item name="trackCornerRadius">2dp</item>
    </style>

    <style name="ThemeOverlay.App.CircularProgressIndicator" parent="">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorSurface">@color/colorPrimaryDark</item>
        <item name="colorOnSurface">@color/colorAccent</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorOnSurface">@color/colorAccent</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.Headline6</item>
        <item name="titleTextColor">@color/textDiAwan</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">8dp</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/textDiAwan</item>
        <item name="colorOnPrimary">@color/textDiAwan</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">8dp</item>
    </style>

    <style name="TextAppearance.App.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/font_judul</item>
    </style>

    <style name="TextAppearance.App.Headline7" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/font_standar</item>
    </style>

    <style name="Widget.MaterialComponents.Chip.Choice" parent="Widget.MaterialComponents.ChipGroup">
        <item name="chipBackgroundColor">@color/colorAccent</item>
    </style>

    <style name="Widget.Design.BottomNavigationView" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
</resources>